<?xml version="1.0"?>
<ruleset name="WPOrg Plugin Readme Linter">
    <description>PHP_CodeSniffer configuration for WPOrg Plugin Readme Linter</description>
    
    <file>src</file>
    <file>tests</file>
    <file>bin</file>
    
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/fixtures/*</exclude-pattern>
    
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg value="sp"/>
    
    <rule ref="PSR12"/>
</ruleset>
